{
    "manifest_version": 3,
    "name": "unloosen-dev",
    "description": "this extension is built by unloosen with ruby!",
    "version": "0.0.1",
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "packages/unloosen-ruby/dist/entry/module-background.esm.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "js": [
                "packages/unloosen-ruby/dist/entry/loader-content-script.esm.js"
            ],
            "matches": ["http://www.example.com/"]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    },
    "permissions" : [
		"contextMenus"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "icons": {
        "16": "res/icons/logo16.png",
        "48": "res/icons/logo48.png",
        "128": "res/icons/logo128.png"
    },
    "web_accessible_resources": [
        {
          "resources": ["*"],
          "matches": ["<all_urls>"]
        }
    ]
}